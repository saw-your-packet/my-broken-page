@model UserRegisterViewModel
@{ ViewBag.Title = PageTitles.REGISTER;}

<form asp-action="@Routes.ACCOUNTS_CONTROLLER_REGISTER" method="post" class="form-horizontal">
    <div class="row">
        <label asp-for="Username" class="control-label col-lg-2"></label>
        <div class="col-lg-10">
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>
    </div>
    <div class="row">
        <label asp-for="Password" class="control-label col-lg-2"></label>
        <div class="col-lg-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row">
        <label asp-for="ConfirmPassword" class="control-label col-lg-2"></label>
        <div class="col-lg-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    @{
        foreach (var securityQuestion in Model.SecurityAnswers)
        {
            <partial name="_SecurityQuestion" model="securityQuestion" />
        }
    }
    <div class="row">
        <div class="form-group col-lg-12">
            <div class="col-lg-3 col-lg-offset-5">
                <input type="submit" value="Register" class="btn btn-primary form-control" />
            </div>
        </div>
    </div>
</form>