@model PostViewModel

@{
    ViewData["Title"] = "Post";
}

<h1>Post</h1>

<div class="row">
    <form class="form-horizontal offset-1 col-5" method="post" asp-action="@nameof(FeedController.AddPost)">
        <div class="form-group clearfix">
            <div class=" col-12 text-center">
                <label asp-for="Tooltip" class="control-label"> Search</label>
                <input asp-for="Tooltip" class="form-control" />
            </div>
            <div class=" col-12 text-center">
                <label asp-for="Content" class="control-label"> Search</label>
                <input asp-for="Content" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>